<div class="container">
    <div class="card">
        <h1 style="text-align: center;">Ventas</h1>
        <h2 class="bg-primary col-3" style="text-align: center;">Total: Q. {{total}}</h2>
        <table class="table table-bordered" style="padding-bottom: 30px;">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Cliente</th>
                    <th>Nit</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {{#each ventas}}
                <tr>
                    <td>{{timeago created_at}}</td>
                    <td>{{cliente}}</td>
                    <td>{{nit}}</td>
                    <td>{{total}}</td>
                    <td class="p-0"><a href="/ventas/{{id}}" class="btn btn-info btn-block" id="mostrar">Detalle</a>
                    </td>
                </tr>
                {{/each}}

                <tr>
                    <td colspan="4">
                        <a href="/profile" class="btn btn-block btn-dark">Regresar</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>